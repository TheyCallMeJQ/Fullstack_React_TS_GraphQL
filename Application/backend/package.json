  "main": "index.js",
  "scripts": {
    "transpile": "tsc -w",
    "execute-transpiled": "nodemon dist/index.js",
    "JQdev": "tsc -w && concurrently --kill-others \"yarn transpile\" \"yarn execute-transpiled\"",
    "start": "nodemon dist/index.js",
    "watch": "tsc -w",
    "start-pg": "brew services start postgresql",
    "stop-pg": "brew services stop postgresql",
    "start-redis": "brew services start redis",
    "stop-redis": "brew services stop redis",
    "start-services": "brew services start postgresql && brew services start redis",
    "stop-services": "brew services stop postgresql && brew services stop redis",
    "create:migration": "mikro-orm migration:create"
  },
  "keywords": [],
